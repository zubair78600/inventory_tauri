{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Inventory System",
  "version": "1.0.0",
  "identifier": "com.inventry.tauri",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Inventory System",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      },
      "csp": "default-src 'self'; connect-src 'self' ipc: http://ipc.localhost blob: asset: http://asset.localhost http://127.0.0.1:8765; frame-src 'self' blob: tauri:; style-src 'self' 'unsafe-inline'; font-src 'self' data:; img-src 'self' data: https: asset: http://asset.localhost blob:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "dmg",
      "app"
    ],
    "resources": [
      "../DB_AI/vectordb/**/*",
      "../DB_AI/training/**/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13",
      "entitlements": "Entitlements.plist"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  }
}