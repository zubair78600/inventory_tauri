generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id            Int           @id @default(autoincrement())
  name          String
  sku           String        @unique
  price         Float
  stockQuantity Int           @map("stock_quantity")
  supplierId    Int?          @map("supplier_id")
  invoiceItems  InvoiceItem[] @relation("ProductInvoiceItems")
  supplier      Supplier?     @relation(fields: [supplierId], references: [id])

  @@map("products")
}

model Supplier {
  id          Int       @id @default(autoincrement())
  name        String
  contactInfo String?   @map("contact_info")
  products    Product[]

  @@map("suppliers")
}

model Customer {
  id       Int       @id @default(autoincrement())
  name     String
  email    String?
  phone    String?
  address  String?
  invoices Invoice[]
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  @@map("customers")
}

model Invoice {
  id               Int           @id @default(autoincrement())
  invoiceNumber    String        @unique @map("invoice_number")
  customerId       Int?          @map("customer_id")
  totalAmount      Float         @map("total_amount")
  taxAmount        Float         @default(0) @map("tax_amount")
  discountAmount   Float         @default(0) @map("discount_amount")
  paymentMethod    String?       @map("payment_method")
  createdAt        DateTime      @default(now()) @map("created_at")
  cgstAmount       Float?        @map("cgst_amount")
  destinationState String?       @map("destination_state")
  fyYear           String?       @map("fy_year")
  gstRate          Float?        @map("gst_rate")
  igstAmount       Float?        @map("igst_amount")
  language         String?       @map("language")
  originState      String?       @map("origin_state")
  sgstAmount       Float?        @map("sgst_amount")
  items            InvoiceItem[] @relation("InvoiceItemsOnInvoice")
  customer         Customer?     @relation(fields: [customerId], references: [id])

  @@map("invoices")
}

model InvoiceItem {
  id        Int     @id @default(autoincrement())
  invoiceId Int     @map("invoice_id")
  productId Int     @map("product_id")
  quantity  Int
  unitPrice Float   @map("unit_price")
  product   Product @relation("ProductInvoiceItems", fields: [productId], references: [id])
  invoice   Invoice @relation("InvoiceItemsOnInvoice", fields: [invoiceId], references: [id])

  @@map("invoice_items")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("STAFF")
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
